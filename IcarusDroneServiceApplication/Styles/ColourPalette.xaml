<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--    Background Colours      -->
    <SolidColorBrush x:Key="darkGrey">#282828</SolidColorBrush>
    <SolidColorBrush x:Key="midGrey">#383838</SolidColorBrush>
    <SolidColorBrush x:Key="lightGrey">#535353</SolidColorBrush>

    <!--    Text Colours        -->
    <SolidColorBrush x:Key="whiteText">#F2F2F2</SolidColorBrush>
    <SolidColorBrush x:Key="redText">#FF0070</SolidColorBrush>
    <SolidColorBrush x:Key="greenText">#00A18F</SolidColorBrush>
</ResourceDictionary>